<% if @overall_best_with_settings %>
	$('#overall-best-settings').text('<%= "Overall best time with #{params[:new_pointer]} and #{params[:new_hand]} hand: #{display_time(@overall_best_with_settings.time)} seconds" %>');
<% else %>
	$('#overall-best-settings').text('<%= "No overall times with #{params[:new_pointer]} and #{params[:new_hand]} hand" %>');
<% end %>
<% if @personal_best_with_settings %>
	$('#personal-best-settings').text('<%= "Personal best time with #{params[:new_pointer]} and #{params[:new_hand]} hand: #{display_time(@personal_best_with_settings.time)} seconds" %>');
<% else %>
	$('#personal-best-settings').text('<%= "No personal times with #{params[:new_pointer]} and #{params[:new_hand]} hand" %>');
<% end %>

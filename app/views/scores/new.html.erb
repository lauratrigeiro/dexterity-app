<h1>Test your dexterity!</h1>
<div id='buttons'>
	<%= button_tag(type: 'button', id: 'left-btn', class: 'game-btn', disabled: true) do %>
		<%= content_tag(:strong, 'Click') %>
	<% end %>

	<%= button_tag(type: 'button', id: 'right-btn', class: 'game-btn', disabled: true) do %>
		<%= content_tag(:strong, 'Click') %>
	<% end %>
	<br/>
	<%= button_tag(type: 'button', id: 'start-btn', class: 'ends-btn') do %>
		<%= content_tag(:strong, 'Start') %>
	<% end %>

	<%= form_for(@score, id: 'done-form') do |f| %>
		<%= f.hidden_field 'time', id: 'score-time' %>
		<%= f.hidden_field 'course', value: 1 %>
		<%= f.hidden_field 'pointer', value: "touchpad" %>
		<%= f.hidden_field 'hand', value: "left" %>
		<%= f.submit("Done!", id: 'done-btn', class: 'ends-btn', hidden: true) %>
	<% end %>

</div>
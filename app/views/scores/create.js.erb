<% if @score.course == 3 %>
	$("#course-form").html("<%= j (render 'course_form') %>");
	// move button to new random position
	var buttonWidth = 7;
	var buttonHeight = 5;
	var leftPos = Math.random()*(100-buttonWidth);
	var topPos = Math.random()*(100-buttonHeight);
	$("#done-btn").css({
		position: "absolute",
		left: leftPos + "%",
		top: topPos + "%"
	});
	// console.log("number of clicks: <%= @score.time %>");

<% else %>
	$('#repeat-form').html("<%= j (render 'repeat') %>");
	<% if @refresh %>
		$('#overall-best').text('<%= print_best_time("overall", score: @overall_best) %>');
		$('#overall-best-settings').text('<%= print_best_time("overall", {pointer: session[:pointer], hand: session[:hand], score: @overall_best_with_settings}) %>');
		$('#personal-best').text('<%= print_best_time("personal", score: @personal_best) %>');
		$('#personal-best-settings').text('<%= print_best_time("personal", {pointer: session[:pointer], hand: session[:hand], score: @personal_best_with_settings}) %>');
	<% end %>
<% end %>

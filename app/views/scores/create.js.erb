<% if @score.course == 3 %>
	$("#course-form").html("<%= j (render 'course_form') %>");
	// move button to new random position
	var buttonWidth = 7;
	var buttonHeight = 5;
	var leftPos = Math.random()*(100-buttonWidth);
	var topPos = Math.random()*(100-buttonHeight);
	$("#done-btn").css({
		position: "absolute",
		left: leftPos + "%",
		top: topPos + "%"
	});
	console.log("number of clicks: <%= @score.time %>");

<% else %>
	$('#repeat-form').html("<%= j (render 'repeat') %>");
	<% if @refresh %>
		$('#overall-best').text('<%= "Overall best time: #{display_time(@overall_best.time)} seconds" %>');
		$('#overall-best-settings').text('<%= "Overall best time with #{session[:pointer]} and #{session[:hand]} hand: #{display_time(@overall_best_with_settings.time)} seconds" %>');
		$('#personal-best').text('<%= "Personal best time: #{display_time(@personal_best.time)} seconds" %>');
		$('#personal-best-settings').text('<%= "Personal best time with #{session[:pointer]} and #{session[:hand]} hand: #{display_time(@personal_best_with_settings.time)} seconds" %>');
	<% end %>
<% end %>
